<resources>


    <style name="FullActivityDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@color/bg</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <!--是否开启模糊背景色,如果你的dialog设置了全屏背景色，会有颜色的融合效果-->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 只有backgroundDimEnabled为true时候，灰度才起到效果 ，0为模糊背景全透明，1为全不透明-->
        <item name="android:backgroundDimAmount">0.4</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/AnimationDialog</item>

    </style>

    <style name="AnimationDialog" >
        <item name="android:windowEnterAnimation">@anim/enter_dialog</item>
        <item name="android:windowExitAnimation">@anim/exit_dialog</item>
    </style>








    <style name="ProgressDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@color/bg</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <!--是否开启模糊背景色,如果你的dialog设置了全屏背景色，会有颜色的融合效果-->
        <item name="android:backgroundDimEnabled">false</item>
        <!-- 只有backgroundDimEnabled为true时候，灰度才起到效果 ，0为模糊背景全透明，1为全不透明-->
        <item name="android:backgroundDimAmount">0.1</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>

    </style>
</resources>
