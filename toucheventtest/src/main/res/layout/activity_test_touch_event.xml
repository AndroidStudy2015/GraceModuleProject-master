<?xml version="1.0" encoding="utf-8"?>


<com.yingdou.www.toucheventtest.customviewdemo.MyMyLinearLayoutOut xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    >

    <TextView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:background="#00f0ff"
        android:text="header"
        android:textSize="30sp" />


    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MyScrollViewMyScrollViewMyScrollViewMyScrollViewMyScrollViewMyScrollViewMyScrollViewMyScrollViewMyScrollView"
            android:textSize="100sp" />

    </ScrollView>

    <TextView
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:layout_alignParentBottom="true"
        android:background="#f0f000"
        android:text="footer"
        android:textSize="30sp"
        android:visibility="visible" />

</com.yingdou.www.toucheventtest.customviewdemo.MyMyLinearLayoutOut>


