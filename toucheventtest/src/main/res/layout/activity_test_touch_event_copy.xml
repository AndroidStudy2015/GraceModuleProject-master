<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".customviewdemo.TestTouchEventActivity">

    <com.yingdou.www.toucheventtest.customviewdemo.MyLinearLayoutOut
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        >

        <TextView
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00f0ff"
            android:text="header"
            android:textSize="30sp" />


        <com.yingdou.www.toucheventtest.customviewdemo.MyScrollView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

          >


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MyScrollViewMyScrollViewMyScrollViewMyScrollViewMyScrollViewMyScrollViewMyScrollViewMyScrollViewMyScrollView"
                android:textSize="100sp" />

        </com.yingdou.www.toucheventtest.customviewdemo.MyScrollView>

        <TextView
            android:id="@+id/footer"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#f0f000"
            android:layout_alignParentBottom="true"
            android:text="footer"
            android:textSize="30sp"
            android:visibility="visible" />

    </com.yingdou.www.toucheventtest.customviewdemo.MyLinearLayoutOut>


</ScrollView>